{
  "name": "docente-plus-plus",
  "version": "1.2.1",
  "description": "Web app per la gestione della didattica dell'insegnante potenziata da IA",
  "type": "module",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:navigation": "jest tests/unit/navigation.test.js",
    "test:onboarding": "jest tests/unit/onboarding.test.js",
    "serve": "python3 -m http.server 8080"
  },
  "keywords": [
    "education",
    "teacher",
    "didactic",
    "pwa",
    "ai-assistant"
  ],
  "author": "Docente++ Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.23.0",
    "@jest/globals": "^29.7.0",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "<rootDir>/tests/__mocks__/styleMock.js"
    },
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js",
      "!node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "transform": {}
  }
}
