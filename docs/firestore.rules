rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Le classi possono essere lette/scritte solo dal proprietario
    match /classes/{classId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }

    // Gli studenti possono essere gestiti solo dal proprietario della classe a cui appartengono
    match /students/{studentId} {
        allow read, write: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/classes/$(resource.data.classId)).data.ownerId;
    }

    // Le valutazioni seguono la stessa logica degli studenti
    match /evaluations/{evaluationId} {
        allow read, write: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/classes/$(resource.data.classId)).data.ownerId;
    }

    // Le lezioni possono essere gestite solo dal proprietario
    match /lessons/{lessonId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }

    // L'orario di un utente pu√≤ essere letto/scritto solo dall'utente stesso
    match /schedules/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // I dati utente possono essere gestiti solo dall'utente stesso
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
